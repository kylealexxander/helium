<div class="">

  <div class="">
    <%= form_for :move_to, url:"", data: { confirm:"Are you sure?"} do %>

      <h3>Move</h3>

      <% if _survey.users.any? %>
        <p>

          <%= link_to "Please remove all users before moving to a new organization!", organization_survey_users_path(_organization, _survey, anchor:"remove_employees") %>
        </p>
      <% else %>
        <div class="">
          Move from <b><%= _organization.name %></b>
          <label>
            to <%= select_tag :move_to_organization_id, options_for_select(Organization.all.map { |org| [org.name, org.id]}) %>
          </label>
        </div>

        <p>
          <button>Move Now</button>
        </p>
        <small>
          This may take a few moments
        </small>
      <% end %>
    <% end %>
  </div>
</div>
