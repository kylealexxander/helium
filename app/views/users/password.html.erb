
<div class="center"><%= image_tag "login.jpg", style: "width:300px" %><br><br></div>

  <div class="card">
    <div class="card-header">
      <h1>Welcome to Sustainability Benefits</h1>
    </div>

    <div class="card-body">
      <%= form_for @user, url: password_path do |f| %>

        <div class="">
          <%= f.label :email, "Enter your email to receive a login link" %>
          <%= f.text_field :email, class:"u-full-width", placeholder: "" %>
        </div>


        <button class="">
          Submit
          <i class=""></i>
        </button>
      <% end %>
    </div>

    <div class="card-footer">
      <%= link_to login_path do %>
        <i class="fa fa-lock"></i>
        Back to login
      <% end %>
    </div>
  </div>
