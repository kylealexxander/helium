<div class="center"><%= image_tag "login.jpg", style: "width:300px" %><br><br></div>

<div class="card">
  <div class="card-header">
    <h1>Welcome to Sustainability Benefits</h1>
  </div>

  <div class="card-body">
    <%= form_for @user, url:login_path do |f| %>
      <div class="">
        <%= f.label :email, "Email" %>
        <%= f.text_field :email, class:"u-full-width" %>
      </div>
      <div class="">
        <%= f.label :password %>
        <%= f.password_field :password, class:"u-full-width" %>
      </div>

      <div class="">
        <button class="">Login <i class="fa fa-send"></i></button>
      </div>
    <% end %>
  </div>

  <div class="card-footer">
    <div class="">
      <%= link_to password_path do %>
        <i class="fa fa-lock"></i>
        Forgot password?
      <% end %>
    </div>
  </div>
</div>
